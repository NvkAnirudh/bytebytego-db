# Application Settings
APP_NAME="ByteByteGo DB"
DEBUG=false
APP_ENV=development
API_KEY_SECRET=your-secret-key-here
RATE_LIMIT_PER_MINUTE=60

# Database (PostgreSQL)
# For local development (running scripts on host machine with Docker Postgres)
DATABASE_URL=postgresql://bbgodb:bbgodb_dev_password@localhost:5432/bbgodb
DATABASE_URL_ASYNC=postgresql+asyncpg://bbgodb:bbgodb_dev_password@localhost:5432/bbgodb

# For running inside Docker (the API service uses these automatically)
# DATABASE_URL=postgresql://bbgodb:bbgodb_dev_password@postgres:5432/bbgodb
# DATABASE_URL_ASYNC=postgresql+asyncpg://bbgodb:bbgodb_dev_password@postgres:5432/bbgodb

# Vector Database (Weaviate)
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=  # Optional, only if using Weaviate Cloud

# Vector Database (Pinecone) - Legacy, can be removed if using Weaviate
PINECONE_API_KEY=
PINECONE_ENVIRONMENT=
PINECONE_INDEX_NAME=bbgodb-articles

# LLM API Keys
OPENAI_API_KEY=
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_GENERATION_MODEL=gpt-4-turbo-preview
ANTHROPIC_API_KEY=  # Optional

# ByteByteGo RSS Feed
RSS_FEED_URL=https://blog.bytebytego.com/feed
SUBSTACK_RSS_URL=https://blog.bytebytego.com/feed  # Alias for backward compatibility

# Ingestion Settings
MAX_ARTICLES_PER_RUN=100
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Redis Cache
REDIS_URL=redis://localhost:6379/0

# LangSmith (Observability)
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=
LANGCHAIN_PROJECT=bbgodb
LANGSMITH_API_KEY=  # Alias for LANGCHAIN_API_KEY
LANGSMITH_PROJECT=bbgodb
